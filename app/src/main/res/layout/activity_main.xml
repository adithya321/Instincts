<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:clipChildren="false"
    tools:context=".activities.MainActivity">

    <com.lukedeighton.wheelview.WheelView
        android:id="@+id/wheelview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:repeatItems="true"
        app:rotatableWheelDrawable="true"
        app:selectionAngle="60.0"
        app:wheelDrawable="@drawable/spin_wheel"
        app:wheelItemCount="6"
        app:wheelPosition="right" />

    <ImageView
        android:id="@+id/spin_arrow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/spin_arrow" />

    <ImageView
        android:id="@+id/register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="32dp"
        android:onClick="registerOnClick"
        android:src="@drawable/register_button" />
</RelativeLayout>